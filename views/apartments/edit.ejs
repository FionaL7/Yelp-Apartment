<% layout('layouts/boilerplate') %>


<div class="container">
  <form action="/apartments/<%= apartment._id %>?_method=PUT" method="POST" class="validated-form" novalidate enctype="multipart/form-data">
    <div class="mb-3">
        <label  class="form-label" for="title">Title</label>
        <input class="form-control" type="text" id="title" name="apartment[title]" value="<%= apartment.title %>" required>
        <div class="valid-feedback">
            Looks good!
        </div>
        <div class="invalid-feedback">
         Please enter title
        </div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="location">Location</label>
        <input class="form-control" type="text" id="location" name="apartment[location]" value="<%= apartment.location %>" required>
        <div class="valid-feedback">
            Looks good!
        </div>
        <div class="invalid-feedback">
            Please enter valid location
        </div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Add image(s)..</label>
            <input class="form-control" type="file" id="image" name="image" multiple>
            <div class="valid-feedback">
              Looks good!
          </div>
          <div class="invalid-feedback">
             Please upload an image
          </div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="price">Price</label>
            <div class="input-group mb-3">
                <span class="input-group-text">$</span>
                <input type="text" class="form-control" id="price" placeholder="0.00" name="apartment[price]" aria-label="Amount (to the nearest dollar)" value="<%= apartment.price %>" required>
                
              </div>
              <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Price should be 0 or greater
            </div>
        </div>
      
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
    <input class="form-control" type="text" id="description"  name="apartment[description]" value="<%= apartment.description %>" required>
    <div class="valid-feedback">
        Looks good!
    </div>
    <div class="invalid-feedback">
        Please provide description
    </div>
    </div>
      
   <div class="mb-3">
       <label for="BHK">BHK:</label>
    <select class=" form-select form-select-sm"  aria-label=".form-select-sm example" name="apartment[BHK]">
        <option selected disabled  value="">Open the select menu</option>
        <option value="Studio">Studio</option>
        <option value="1">1 BHK</option>
        <option value="2">2 BHK</option>
        <option value="3">3 BHK</option>
        <option value="penthouse">Penthouse</option>
       </select>
      <div class="valid-feedback">
        Looks good!
    </div>
    <div class="invalid-feedback">
   Please select a proper option
    </div>
   </div>
 <div class="row row-cols-1 row-cols-md-4 g-4 mb-3">
     <% apartment.images.forEach(function(img, i){ %>
<img src="<%=img.thumbnail%>" class="img-thumbnail rounded" alt="" >
<div class="form-check">
    <input type="checkbox" name="deleteImages[]" id="image-<%=i%>" value="<%=img.filename%>">
    <label  for="image-<%=i%>"> Delete?</label>
</div>

       <%  }) %> 
 </div>
    <div class="mt-3">
        <button class="btn btn-success py-2 ">Submit</button>
    </div>
  </form>
</div>