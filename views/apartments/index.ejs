<% layout('layouts/boilerplate') %> 

<div class="container">
<h1><u>Yelp Apartments</u></h1>

    <% for(let apartment of apartments){ %> 
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <%if(apartment.images.length) {%>
                    <img class="img-fluid" src="<%= apartment.images[0].url %>" alt="apts">
                    <% }else {%>
                        <img src="https://res.cloudinary.com/dos5fvc4r/image/upload/v1631820945/Yelp-apartment/ocmkakt0syxgktpejy25.jpg" class="img-fluid" alt="">
                        <% } %> 
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><a href="/apartments/<%= apartment._id %>"><%= apartment.title  %></a></h5>
                        <p class="card-text"><%= apartment.description %> </p>
                        <h6>$ <%= apartment.price %> <small class="text-muted">/night</small> </h6>
                        <small class="text-muted"><%= apartment.location %> </small>
                        
                    </div>
                </div>
            </div>
        </div>
    <% } %> 


</div>